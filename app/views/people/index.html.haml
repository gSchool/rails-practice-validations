.page-header
  .pull-right
    =link_to 'New Person', new_person_path, class: "btn btn-info"
  %h1 People

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Date of Birth
  %tbody
    -@people.each do |person|
      %tr
        %td=person.first_name
        %td=person.last_name
        %td=person.date_of_birth
        %td=link_to 'edit', edit_person_path(person)
